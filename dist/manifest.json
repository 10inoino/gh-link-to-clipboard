{
  "manifest_version": 3,
  "name": "GitHub PR Comment Copier",
  "version": "1.1.1",
  "description": "Copies text when clicking links in GitHub PR comments",
  "permissions": [
    "clipboardWrite"
  ],
  "content_scripts": [
    {
      "matches": ["https://github.com/*/*/pull/*"],
      "js": ["js/content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
} 

